<header class="main-header">
  <%= link_to(root_path, class: "logo") do %>
    <span class="logo-mini"><b>S</b>UN</span>
    <span class="logo-lg"><b>SUN</b> * </span>
  <% end %>
  <nav class="navbar navbar-static-top">
    <%= link_to("#", class: "sidebar-toggle", "data-toggle": "push-menu", role: "button") do %>
      <span class="sr-only"></span>
    <% end %>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to("#", class: "dropdown-toggle", "data-toggle": "dropdown") do %>
              <%= current_user.email %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), users_path %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
